<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragment.FragmentAddTask">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="1.5dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/ripple"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_left"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="12sp"
                android:text="New Project"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Name of task"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/edt_task_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg"
                        android:fontFamily="@font/inter_regular"
                        android:hint="Write..."
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15.5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/edt_hint"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Задача связана с"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@drawable/edt_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/v_task_connection"
                            android:layout_width="0dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:dropDownWidth="match_parent"
                            android:focusable="true"
                            android:fontFamily="@font/inter_regular"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15.5dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/edt_hint"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Проект"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@drawable/edt_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/v_task_projects"
                            android:layout_width="0dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:dropDownWidth="match_parent"
                            android:focusable="true"
                            android:fontFamily="@font/inter_regular"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/edt_hint"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Приоритет"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@drawable/edt_bg"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_task_importancy"
                            android:layout_width="0dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:dropDownWidth="match_parent"
                            android:focusable="true"
                            android:fontFamily="@font/inter_regular"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15.5dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/edt_hint"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Status"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@drawable/edt_bg"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_task_status"
                            android:layout_width="0dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:dropDownWidth="match_parent"
                            android:focusable="true"
                            android:fontFamily="@font/inter_regular"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15.5dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/edt_hint"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Ответственный"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/v_responsible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg"
                        android:fontFamily="@font/inter_regular"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15.5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/edt_hint"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Наблюдатели"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/v_observers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg"
                        android:fontFamily="@font/inter_regular"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15.5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/edt_hint"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Напоминание"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/time_reminder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg"
                            android:clickable="true"
                            android:drawableEnd="@drawable/ic_calendar"
                            android:drawablePadding="10dp"
                            android:focusable="false"
                            android:fontFamily="@font/inter_regular"
                            android:hint="__/__/____"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15.5dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/edt_hint"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Дата завершения"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/time_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg"
                            android:clickable="true"
                            android:drawableEnd="@drawable/ic_calendar"
                            android:drawablePadding="10dp"
                            android:focusable="false"
                            android:fontFamily="@font/inter_regular"
                            android:hint="__/__/____"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15.5dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/edt_hint"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="File"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/files"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_documenyt_file"
                        android:focusable="false"
                        android:fontFamily="@font/inter_regular"
                        android:hint="----------"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15.5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/edt_hint"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Ответственный"
                        android:textColor="@color/text_color"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/info_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="top"
                        android:hint="Input"
                        android:minHeight="110dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15.5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/edt_hint"
                        android:textSize="12sp" />

                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="14sp">

                    <TextView
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/sent_msg_bg"
                        android:backgroundTint="@color/primary"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:paddingVertical="14.5dp"
                        android:text="Yatda Saklamak"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple"
                        android:clickable="true"
                        android:focusable="true" />

                </FrameLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>