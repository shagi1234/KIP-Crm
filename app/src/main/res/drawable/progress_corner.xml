<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" /> <!-- Background color -->
            <corners android:radius="12dp" /> <!-- Rounded corners radius -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#2196F3" /> <!-- Progress color -->
                <corners android:radius="12dp" /> <!-- Rounded corners radius -->
            </shape>
        </clip>
    </item>
</layer-list>